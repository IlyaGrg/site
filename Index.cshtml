                <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">Назад</a>
                <nav class="nav-question">
                    <ul class="nav-list-question">
                        <li class="nav-item-question"><a href="#!" class="nav-link">Основное</a></li>
